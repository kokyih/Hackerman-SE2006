<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="168dp"
        tools:layout_editor_absoluteY="57dp">

        <Button
            android:id="@+id/consentform_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <TextView
            android:id="@+id/speccf_sender"
            android:layout_width="123dp"
            android:layout_height="62dp"
            android:text="Sender" />

        <EditText
            android:id="@+id/speccf_title"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/speccf_msg"
            android:layout_width="343dp"
            android:layout_height="374dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Description" />

        <ToggleButton
            android:id="@+id/cfApproveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="@android:string/yes"
            android:textOn="Approved"
            />

        <Button
            android:id="@+id/cfSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />

        <TextView
            android:id="@+id/noOfApproval"
            android:layout_width="113dp"
            android:layout_height="45dp"
            android:text="Number of Approved Consent Form"
            android:visibility="invisible"/>

        <Spinner
            android:id="@+id/listOfClass"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:inputType="textPersonName"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>